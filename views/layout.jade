  body(onload='loadDeck(#{preset})')
    header.navbar.navbar-fixed-top.navbar-custom
      div
        div.navbar-title
          a(href="#")#logo.navbar-brand Web Analog Synthesizer
        div.navbar-twitter
          a(href="https://twitter.com/share", data-size="large").twitter-share-button Tweet
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    div.btn-menu
      button#initDeck.btn.btn-primary.btn-margin(title='Initialize Deck', type='button', onclick='location.href="/"')
        i.fa.fa-file-text-o.fa-lg
      button#addCard.btn.btn-primary.btn-margin(title='Add audio card', type='button')
        i.fa.fa-plus-square-o.fa-lg
      button#loadDeck.btn.btn-primary.btn-margin(title='Open Preset', type='button', onclick='location.href="/presets"')
        i.fa.fa-folder-open-o.fa-lg
      button#saveDeck.btn.btn-primary.btn-margin(title='Save deck', type='button')
        i.fa.fa-floppy-o.fa-lg
    div.btn-menu
      input#presetLabel.preset-label(type="text", name="preset-name")
    div.jumbotron
      div.container
        div#backPanel.row 
          block content
