.main-pane {
  width: 660px;
  margin: 0 -10px 0 0;
  _zoom: 1;
  overflow: hidden;

}

.main-pane .column {
  width: 200px;
  min-height: 110px;
  _height: 110px;
  margin-right: 10px;
  margin-left: 10px;
  float: left;
}

.main-pane .column .node-pane {
  width: 180px;
  min-height: 110px;
  margin: 5px;
  display: inline-block;
}

.main-pane .column .node-pane h2 {
  background: #666;
  padding: 5px;
  border-bottom: 1px solid #999;
  color: #FFF;
  margin: 0;
  text-align: center;
}

.main-pane .column .osc-column {
  float: left;
  text-align: center;
  padding: 5px
}

.main-pane .column .filter-column {
  text-align: center;
  padding: 5px
}

.main-pane .column .node-pane .eg-column {
  float: left;
  text-align: center;
  padding: 5px;
  width: 100%;
}

input[type=radio] {
  display: none;
}

input[type="radio"]:checked + label {
  background: #fff;
  color: #000;
}

.label:hover {
  background-color: #aaa;
  color: #000;
}

.label {
  color: #fff;
  border: #dddddd solid 2px;
  display: block;
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
  padding-right: 10px;
  cursor: pointer;
}

ul {
  margin: 0px;
  padding: 0px;
}

ul li {
  list-style-type: none;
  list-style-position: outside;
  padding: 4px;
}	


body {
  padding-top: 60px;
  font-family: Impact;
}

section {
  overflow :auto;
}

textares {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

.gen-label {
  color: #fff;
  height: 30px;
}

webaudio-knob #wac-knob {
  margin: auto;
}
